/* global */
.film-checkbox {
  position: relative;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(0,16,63,1);
}
.film-checkbox.active {
  background: #FA6400;
  border-color: #FA6400;
}
.film-checkbox.active::after {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 4rpx;
  width: 6rpx;
  height: 12rpx;
  border-color: #FFFFFF;
  border-style: solid;
  border-width: 0 3rpx 3rpx 0;
  transform: rotate(45deg);
}

/* page */
.film-wrapper {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  display: flex;
}
.film-box {
  margin: 15rpx;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1px solid rgba(255,255,255,1);
  max-height: 70rpx;
  box-shadow: 0px 2rpx 12rpx 0px rgba(102,102,102,0.5);
  padding: 16rpx 20rpx;
}
.film-box text {
  display: inline-block;
  margin-left: 10rpx;
  color: #FA6400;
  font-size: 26rpx;
  color: #172550;
}

.film-box .film-icon {
  width: 26rpx;
  height: 26rpx;
}
.film-box.edit {
  right: 213rpx;
}