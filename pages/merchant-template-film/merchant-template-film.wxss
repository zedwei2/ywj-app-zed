/* global */
page {
  height: 100%;
  background-color:white;
}
text {
  color: #fff;
}
.relative {
  position: relative;
}

/* page */
.film-header {
  display: flex;
  padding: 40rpx 30rpx 40rpx;
  height: 465rpx;
}
.film-header .film-img {
  width: 284rpx;
  height: 400rpx;
}
.film-header .film-header-img {
  position: relative;
  margin-top: 30rpx;
  margin-right: 30rpx;
  border-radius: 24rpx;
}
.film-header .film-header-bg {
  width: 100%;
  height: 545rpx;
  left: 0;
  top: 0;
  position: absolute;
  background-size: cover;
  z-index: -1;
}
.film-header .film-header-content {
  flex: 1;
}
.film-header .film-header-content .relative {
  height: 52rpx;
}
.film-header .film-content-share {
  width: 68rpx;
  height: 52rpx;
  line-height: 52rpx;
  border: 1px solid rgba(130,133,153,1);
  opacity: 0.8;
  background: #242532;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  padding: 0;
  margin-right: 0;
}
.film-header .film-content-title {
  font-size: 38rpx;
  font-weight: 600;
}
.film-header .film-content-desc {
  opacity: 0.5;
  font-size: 26rpx;
  line-height: 41rpx;
}
.film-header .film-content-time {
  opacity: 0.5;
  font-size: 24rpx;
  margin-top: -4rpx;
  display: block;
}

.film-body {
  width: 100%;
  min-height: 944rpx;
  border-radius: 50rpx 50rpx 0rpx 0rpx;
  margin-top: -35rpx;
  background-color: #fff;
}
.film-body .film-body-content {
  padding: 46rpx 30rpx 17rpx;
}
.film-body .film-body-content video {
  width: 100%; 
}
.film-body .film-body-content button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #FFF3EB;
  border: 1rpx solid rgba(250,100,0,1);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #FA6400;
  margin: -20rpx auto 50rpx;
}
.film-body .film-wallpaper {
  width: 100%;
}
.film-body .film-body-title {
  font-size: 32rpx;
  color: #00103F;
  font-weight: 600;
  display: block;
  text-align: left;
  margin: 20rpx 0 50rpx 0;
}

.film-footer {
  display: flex;
  padding: 30rpx 25rpx;
  border-top: 1px solid rgba(237,241,240,1);
}
.film-footer button {
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFE9E9;
  border: 1px solid rgba(255,5,0,1);
  border-radius: 44rpx;
  margin: 0 25rpx;
  font-size: 30rpx;
  color: #FF0100;
  font-weight: 600;
}
.film-footer button:last-child {
  background-image: linear-gradient(270deg, #FF3500 0%, #FF0000 100%);
  box-shadow: 0px 5px 15px 0px rgba(255,173,173,0.5);
  color: #FFFFFF;
}

